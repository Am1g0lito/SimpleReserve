<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/sidebar.css" />
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon" />
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
  </head>
  <body>
    {{#if showSidebar}}
      <div class="sidebar">
    <div class="sidebar-header">
      <h4>Simple Reserve</h4>
    </div>
    <ul class="sidebar-menu">
      <li class="{{#if isAgenda}}active{{/if}}">
        <a href="/"><i class="bi bi-calendar-check"></i> <span>Minha Agenda</span></a>
      </li>
      <li class="{{#if isReservasDia}}active{{/if}}">
        <a href="#"><i class="bi bi-list-check"></i> <span>Reservas do Dia</span></a>
      </li>
      <li class="{{#if isNovaReserva}}active{{/if}}">
        <a href="/novareserva"><i class="bi bi-plus-circle"></i> <span>Nova Reserva</span></a>
      </li>
      <li class="{{#if isPesquisar}}active{{/if}}">
        <a href="#"><i class="bi bi-search"></i> <span>Pesquisar</span></a>
      </li>
      <li class="{{#if isHistorico}}active{{/if}}">
        <a href="#"><i class="bi bi-file-earmark-text"></i> <span>Emitir Histórico</span></a>
      </li>
      <li class="{{#if isConta}}active{{/if}}">
        <a href="#"><i class="bi bi-person-circle"></i> <span>Minha Conta</span></a>
      </li>
      <li class="{{#if isSair}}active{{/if}}">
        <a href="#"><i class="bi bi-box-arrow-right"></i> <span>Sair</span></a>
      </li>
      <div class="sidebar-divider"></div>
      <!--<span class="sidebar-title">Administração</span>-->
      <li class="{{#if isCadastroSala}}active{{/if}}">
        <a href="/gerenciarSalas"><i class="bi bi-folder-plus"></i> <span>Gerenciar Salas</span></a>
      </li>
      <li class="{{#if isCadastroSala}}active{{/if}}">
        <a href="/cadastrosala"><i class="bi bi-folder-plus"></i> <span>Cadastrar Sala</span></a>
      </li>
      <li class="{{#if isGerenciarUsuarios}}active{{/if}}">
        <a href="#"><i class="bi bi-person-fill-gear"></i> <span>Gerenciar Usuários</span></a>
      </li>
      
    </ul>
  </div>
  </div>
    {{/if}}
    {{#if showLogo}}
      <div class="logoSala">
      <img
        src="/images/logoLogin.png"
        alt="Simple Reserve Logo"
        class="logofoto"
      />
    </div>
    {{/if}}
    
    
    {{{body}}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous">
    </script>
  </body>
  </body>
</html>