<div class="container">
  <div class="header">
    <div class="title-container">
      <h1><i class="fas fa-building"></i> Gerenciador de Blocos</h1>
      <button class="btn-add" id="btnAddBloco" title="Adicionar bloco">
        <i class="fas fa-plus"></i>
      </button>
    </div>
  </div>
  <div class="bloco-table-container">
    <table class="bloco-table">
      <thead>
        <tr>
          <th>Nome do Bloco</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#if blocos.length}}
          {{#each blocos}}
            <tr>
              <td>{{this.descricao}}</td>
              <td class="actions">
                <button class="btn-action btn-edit"><i class="fas fa-edit"></i> Editar</button>
                <button class="btn-action btn-delete" data-id="{{this.id}}"><i class="fas fa-trash-alt"></i> Excluir</button>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr class="empty-message-row">
            <td colspan="2" class="empty-message">
              Nenhum bloco cadastrado. Clique no botão
              <i class="fas fa-plus"></i>
              para adicionar.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>

<!-- Modal de Cadastro -->
<div id="addBlocoModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><i class="fas fa-building"></i> Cadastrar Novo Bloco</h2>
      <span class="close">&times;</span>
    </div>
    <form id="blocoForm" action="/bloco" method="POST">
      <div class="form-group">
        <label for="descricao">Nome do bloco</label>
        <input
          type="text"
          id="descricao"
          name="descricao"
          class="form-control"
          required
          placeholder="Ex: Bloco A, Bloco B, Bloco C"
        />
      </div>
      <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        Cadastrar Bloco
      </button>
    </form>
  </div>
</div>

