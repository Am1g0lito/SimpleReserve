<div class="container">
  <div class="header">
    <div class="title-container">
      <h1><i class="fas fa-door-open"></i> Gerenciador de Tipos de Sala</h1>
      <button class="btn-add" id="btnAddTipoSala" title="Adicionar tipo de sala">
        <i class="fas fa-plus"></i>
      </button>
    </div>
  </div>
  <div class="user-table-container">
    <table class="user-table">
      <thead>
        <tr>
          <th>Tipo de Sala</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#if tipoSalas.length}}
          {{#each tipoSalas}}
            <tr>
              <td>{{this.descricao}}</td>
              <td class="actions">
                <a href="editarTipoSala/{{id_tipo}}" class="btn-action btn-edit">
                            <i class="fas fa-edit"></i>
                            <span>Editar</span>
                        </a>
                        <a href="excluirTipoSala/{{id_tipo}}" class="btn-action btn-delete" >
                            <i class="fas fa-trash-alt"></i>
                            <span>Excluir</span>
                        </a>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr class="empty-message-row">
            <td colspan="2" class="empty-message">
              Nenhum tipo de sala cadastrado. Clique no botão
              <i class="fas fa-plus"></i>
              para adicionar.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>

<!-- Modal de Cadastro -->
<div id="addTipoSalaModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><i class="fas fa-door-open"></i> Cadastrar Novo Tipo de Sala</h2>
      <span class="close">&times;</span>
    </div>
    <form id="tipoSalaForm" action="/tipoSala" method="POST">
      <div class="form-group">
        <label for="descricao">Tipo de Sala</label>
        <input
          type="text"
          id="descricao"
          name="descricao"
          class="form-control"
          required
          placeholder="Ex: Sala de aula, Auditório, Laboratório"
        />
      </div>
      <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        Salvar Tipo de Sala
      </button>
    </form>
  </div>
</div>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="/stylesheets/tipoSala.css">
<script src="/tipoSala.js" defer></script>