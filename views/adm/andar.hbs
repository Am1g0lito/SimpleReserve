<div class="container">
  <div class="header">
    <div class="title-container">
      <h1><i class="fas fa-layer-group"></i> Gerenciador de Andares</h1>
      <button class="btn-add" id="btnAddAndar" title="Adicionar andar">
        <i class="fas fa-plus"></i>
      </button>
    </div>
  </div>
  <div class="user-table-container">
    <table class="user-table">
      <thead>
        <tr>
          <th>Nome do Andar</th>
          <th>Bloco</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#if andares.length}}
          {{#each andares}}
            <tr>
              <td>{{this.descricao}}</td>
              <td>{{this.blocoAndar.descricao}}</td>
              <td class="actions">
                <button class="btn-action btn-edit"><i class="fas fa-edit"></i> Editar</button>
                <button class="btn-action btn-delete" data-id="{{this.id_andar}}"><i class="fas fa-trash-alt"></i> Excluir</button>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr class="empty-message-row">
            <td colspan="3" class="empty-message">
              Nenhum andar cadastrado. Clique no botão
              <i class="fas fa-plus"></i>
              para adicionar.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>

<!-- Modal de Cadastro -->
<div id="addAndarModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><i class="fas fa-layer-group"></i> Cadastrar Novo Andar</h2>
      <span class="close">&times;</span>
    </div>
    <form id="andarForm" action="/andar" method="POST">
      <div class="form-group">
        <label for="descricao">Nome do Andar</label>
        <input
          type="text"
          id="descricao"
          name="descricao"
          class="form-control"
          required
          placeholder="Ex: Andar 1, 2, 3..."
        />
      </div>
      <div class="form-group">
        <label for="id_bloco">Bloco</label>
        <select id="id_bloco" name="id_bloco" class="form-control" required>
          <option value="">Selecione um bloco</option>
          {{#each blocos}}
            <option value="{{this.id_bloco}}">{{this.descricao}}</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        Salvar Andar
      </button>
    </form>
  </div>
</div>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
