<div class="container">
  <div class="header">
    <div class="title-container">
      <h1><i class="fas fa-layer-group"></i> Gerenciador de Andares</h1>
      <button class="btn-add" id="btnAddAndar" title="Adicionar andar">
        <i class="fas fa-plus"></i>
      </button>
    </div>
  </div>
  <div class="andar-table-container">
    <table class="andar-table">
      <thead>
        <tr>
          <th>Nome do Andar</th>
          <th>Bloco</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#if andares.length}}
          {{#each andares}}
            <tr>
              <td>{{this.descricao}}</td>
              <td>{{this.blocoAndar.descricao}}</td>
              <td class="actions">
               <a href="editarAndar/{{id_andar}}" class="btn-action btn-edit">
                            <i class="fas fa-edit"></i>
                            <span>Editar</span>
                        </a>
                        <a href="excluirAndar/{{id_andar}}" class="btn-action btn-delete" onclick="return confirm('Tem certeza que deseja excluir este andar?')">
                            <i class="fas fa-trash-alt"></i>
                            <span>Excluir</span>
                        </a>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr class="empty-message-row">
            <td colspan="3" class="empty-message">
              Nenhum andar cadastrado. Clique no botão
              <i class="fas fa-plus"></i>
              para adicionar.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>

<!-- Modal de Cadastro de andar -->
<div id="addAndarModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><i class="fas fa-layer-group"></i> Cadastrar Novo Andar</h2>
      <span class="close">&times;</span>
    </div>
    <form id="andarForm" action="{{#if andar}}/editarAndar/{{andar.id_andar}}{{else}}/andar{{/if}}" method="POST">
      <div class="form-group">
        <label for="descricao">Nome do Andar</label>
        <input
          type="text"
          id="descricao"
          name="descricao"
          class="form-control"
          required
          placeholder="Ex: Andar 1, 2, 3..."
          value="{{#if andar}}{{andar.descricao}}{{/if}}"
        />
      </div>
      <div class="form-group">
        <label for="id_bloco">Bloco</label>
        <select id="id_bloco" name="id_bloco" class="form-control" required>
          <option value="">Selecione um bloco</option>
          {{#each blocos}}
            <option value="{{this.id_bloco}}" {{#if ../andar}}{{#ifeq this.id_bloco ../andar.id_bloco}}selected{{/ifeq}}{{/if}}>{{this.descricao}}</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        {{#if andar}}Salvar Alterações{{else}}Salvar Andar{{/if}}
      </button>
    </form>
  </div>
</div>

