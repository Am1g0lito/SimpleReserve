<div class="container">
  <div class="header">
    <div class="title-container">
      <h1><i class="fas fa-table"></i> Gerenciador de Tipos de Mesa</h1>
      <button class="btn-add" id="btnAddMesa" title="Adicionar tipo de mesa">
        <i class="fas fa-plus"></i>
      </button>
    </div>
  </div>
  <div class="user-table-container">
    <table class="user-table">
      <thead>
        <tr>
          <th>Descrição do Tipo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#if mesas.length}}
          {{#each mesas}}
            <tr>
              <td>{{this.descricao}}</td>
              <td class="actions">
                <button class="btn-action btn-edit"><i class="fas fa-edit"></i> Editar</button>
                <button class="btn-action btn-delete" data-id="{{this.id}}"><i class="fas fa-trash-alt"></i> Excluir</button>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr class="empty-message-row">
            <td colspan="2" class="empty-message">
              Nenhum tipo de mesa cadastrado. Clique no botão
              <i class="fas fa-plus"></i>
              para adicionar.
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>

<!-- Modal de Cadastro -->
<div id="addMesaModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><i class="fas fa-table"></i> Cadastrar Novo Tipo de Mesa</h2>
      <span class="close">&times;</span>
    </div>
    <form id="mesaForm" action="/tipoMesa" method="POST">
      <div class="form-group">
        <label for="descricao">Descrição do Tipo de Mesa</label>
        <input
          type="text"
          id="descricao"
          name="descricao"
          class="form-control"
          required
          placeholder="Ex: Mesa redonda de 8 lugares"
        />
      </div>
      <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        Salvar Tipo de Mesa
      </button>
    </form>
  </div>
</div>

