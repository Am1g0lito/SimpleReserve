<div class="container">
  <div class="header">
    <div class="title-container">
      <h1><i class="fas fa-users-cog"></i> Gerenciador de Usuários</h1>
      <button class="btn-add" id="btnAddUser" title="Adicionar usuário">
        <i class="fas fa-plus"></i>
      </button>
    </div>
  </div>
  <div class="user-table-container">
    <table class="user-table">
      <thead>
        <tr>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Senha</th>
          <th>Ações</th>
        </tr>
      </thead>
     
      <tbody>
        {{#if usuarios.length}}
          {{#each usuarios}}
            <tr>
              <td>{{this.nome}}</td>
              <td>{{this.email}}</td>
              <td>{{this.senha}}</td>
              <td class="actions">
                <button class="btn-action btn-edit"><i class="fas fa-edit"></i> Editar</button>
                <button class="btn-action btn-delete"><i class="fas fa-trash-alt"></i> Excluir</button>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr class="empty-message-row">
            <td colspan="4" class="empty-message">
              Nenhum usuário cadastrado. Clique no botão
              <i class="fas fa-plus"></i>
              para adicionar.
            </td>
          </tr>
        {{/if}}
      </tbody>
         

    </table>
  </div>
</div>
<!-- Modal de Cadastro -->
<div id="addUserModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2><i class="fas fa-user-plus"></i> Cadastrar Novo Usuário</h2>
      <span class="close">&times;</span>
    </div>
    <form id="userForm">
      <div class="form-group">
        <label for="name">Nome completo</label>
        <input
          type="text"
          id="name"
          name="nome"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <label for="email">E-mail</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <label for="senha">Senha</label>
        <input
          type="password"
          id="senha"
          name="senha"
          class="form-control"
          required
        />
      </div>
      <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        Cadastrar Usuário
      </button>
    </form>
  </div>
</div>

