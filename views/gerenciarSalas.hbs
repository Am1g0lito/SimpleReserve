<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro de Sala</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <link rel="stylesheet" href="./stylesheets/sidebar.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon" />
    <title>Gerenciar Salas</title>
    <style>
      body{
        /*text-align: center;
        align-items: center;*/
        
      }
      table {
        margin: 0 auto;
        width: 90%;
        border-collapse: collapse;
        }
      th, td {
        border: 1px solid #ddd;
      }
    </style>
  </head>
  <body>
    <h2 class="teste">Gerenciar Salas</h2>
    <table border="1" class="table-teste">
      <tr >
        <th>Código</th>
        <th>Descrição</th>
        <th>Número</th>
        <th>Bloco</th>
        <th>Andar</th>
        <th>Capacidade</th>
        <th>Tipo de Mesa</th>
        <th>Mesa Canhoto</th>
        <th>Projetor</th>
        <th>Ar Condicionado</th>
        <th>Quadro</th>
        <th>Computador</th>
        <th>Acessibilidade</th>
        <th>Quantidade de Mesa Acessível</th>
        <th>Observações</th>
        <th>Recursos</th>
        <th>Ações</th>
      </tr>
      {{#each salas}}
        <tr>
          <td>{{cod}}</td>
          <td>{{descricao}}</td>
          <td>{{numero}}</td>
          <td>{{bloco}}</td>
          <td>{{andar}}</td>
          <td>{{qtdade_lugares}}</td>
          <td>{{tipo_mesa}}</td>
          <td>{{mesa_canhoto}}</td>
          <td>{{projetor}}</td>
          <td>{{arcondicionado}}</td>
          <td>{{quadro}}</td>
          <td>{{computador}}</td>
          <td>{{acessibilidade}}</td>
          <td>{{qtdade_mesa_acessivel}}</td>
          <td>{{obs}}</td>  
          <td>{{recursos}}</td>

                         
          <td>
            <a href="/salas/editar/{{cod}}">Editar</a>
            <a
              href="/salas/excluir/{{cod}}"
              onclick="return confirm('Tem certeza?')"
            >Excluir</a>
          </td>
        </tr>
      {{/each}}
      
    </table>
    
  </body>
</html>